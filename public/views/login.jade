html
	head
		link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
		link(href="/css/login-overrides.css" rel="stylesheet")
	body
		.container
			.row.vertical-offset-100
				.col-md-4.col-md-offset-4
					.panel.panel-default
						.panel-heading
							h3.panel-title Please sign in
						.panel-body
							form(accept-charset='UTF-8', role='form')
								fieldset
									.form-group
										input.form-control(placeholder='Handle', name='handle`', type='text')
									.form-group
										input.form-control(placeholder='Password', name='password', type='password', value='')
									.checkbox
										label
											input(name='remember', type='checkbox', value='Remember Me')
											|  Remember Me
									input.btn.btn-lg.btn-success.btn-block(type='submit', value='Login')
									|  New? Connect Github to get started.
									a.btn.btn-lg.btn-default.btn-block(onclick='window.location.href="/auth/github"' type='submit', value='Login With Github')
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
	script(src='/js/scripts/login-form.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.18.4/TweenLite.min.js')
	script(src='http://cdnjs.cloudflare.com/ajax/libs/gsap/latest/plugins/CSSPlugin.min.js')
