html
	head
		link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/cyborg/bootstrap.min.css", rel="stylesheet")
		link(href="/css/login-overrides.css" rel="stylesheet")
		link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet")

	body
		.container
			.row.vertical-offset-100
				.col-md-4.col-md-offset-4
					.panel.panel-default
						.panel-heading
							h3.panel-title Welcome to commitMap!

						.panel-body
							form(accept-charset='UTF-8', role='form')
								a.btn.btn-danger.btn-xlarge( onclick='window.location.href="/auth/github"' ) 
									span.fa.fa-github
										|   Sign in with Github



	script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
	script(src='/js/scripts/login-form.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.18.4/TweenLite.min.js')
	script(src='http://cdnjs.cloudflare.com/ajax/libs/gsap/latest/plugins/CSSPlugin.min.js')
